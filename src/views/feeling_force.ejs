            <script> 
                let rotationAngle = 283; // Initial rotation angle
                let clickCount = 0;
                
                function decrease() {
                    const n = -15; // Number of degrees to rotate on each click
                    if (rotationAngle + n >= 150) {
                    rotationAngle += n; // Increase the rotation by n degrees each time
                    if (clickCount < -8) {
                        clickCount--;
                    }
                    document.getElementById('arrow').style.transform = `rotate(${rotationAngle}deg)`;
                    sendDataToServer(clickCount);
                    }
                }
            </script>

            <script>
                 function increase() {
                    const n = 15;
                    if (rotationAngle + n <= 410) {
                    rotationAngle += n;
                    if (clickCount < 8) {
