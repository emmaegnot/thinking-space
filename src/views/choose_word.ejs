<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <script src="https://kit.fontawesome.com/7286f6060f.js" crossorigin="anonymous"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>The Thinking Space</title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      background-color: #f0f0f0;
      font-weight: bold;
      font-size: 1.2em;
      width: 100%;
    }

    .header li {
      list-style: none;
      display: inline;
    }

    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 80vw;
      max-width: 800px;
      height: 70vh;
      max-height: 600px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin: 20px auto;
      flex-grow: 1;
    }

    .colouredText {
      color: #4a90e2;
      margin-bottom: 20px;
    }

    .button-container {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    .word-item button {
      background-color: rgb(125, 191, 248);
      border: none;
      padding: 10px 20px;
      font-size: 1em;
      color: #fff;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .word-item button:hover {
      background-color: #90f9a0;
    }

    .button-div {
      margin-top: 20px;
      text-align: center;
    }

    .button-div button {
      padding: 10px 20px;
      font-size: 1em;
      color: #fff;
      background-color: #4a90e2;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .button-div button:hover {
      background-color: #35bd4e;
    }

    .word-item button.active {
      background-color: #90f9b3; 
      color: #fff;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    .footer {
      text-align: center;
      padding: 10px;
      background-color: #f0f0f0;
      width: 100%;
    }
  </style>
</head>
<body>
  <nav class="mouseM">
    <ul class="header">
      <li><a>THE THINKING SPACE</a></li>
      <li class="home"><a href="/"><i class="fa-solid fa-house"></i></a></li>
    </ul>
  </nav>

  <div class="container mouseM">
    <form action="submit-word" method="post">
      <h1 class="colouredText">Choose a word!</h1>

      <input type="hidden" id="selectedEmotion" name="selectedEmotion" value="">
      
      <div class="button-container">
        <div class="word-item">
          <button type="button" name="emotion" value="Angry" onclick="highlightButton(this)">Angry</button>
        </div>
        <div class="word-item">
          <button type="button" name="emotion" value="Disgusted" onclick="highlightButton(this)">Disgusted</button>
        </div>
        <div class="word-item">
          <button type="button" name="emotion" value="Fearful" onclick="highlightButton(this)">Fearful</button>
        </div>
        <div class="word-item">
          <button type="button" name="emotion" value="Happy" onclick="highlightButton(this)">Happy</button>
        </div>
        <div class="word-item">
          <button type="button" name="emotion" value="Sad" onclick="highlightButton(this)">Sad</button>
        </div>
        <div class="word-item">
          <button type="button" name="emotion" value="Surprise" onclick="highlightButton(this)">Surprise</button>
        </div>
      </div>

      <div class="button-div" align="center">
        <button type="submit">NEXT</button>
      </div>
    </form>
  </div>

  <footer class="footer">
    <img class="logo" src="images/logo.png" alt="Raymer Enterprises Ltd" width="212" height="104">
    <span class="motto mouseM">With emotional health in mind</span>
  </footer>

  <script>
    function highlightButton(button) {
      const buttons = document.querySelectorAll('.word-item button');
      buttons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      document.getElementById('selectedEmotion').value = button.value;
    }
  </script>
</body>
</html>
